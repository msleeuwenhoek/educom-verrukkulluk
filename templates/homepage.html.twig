{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
    <div class="header">
        <img class="logo" src="assets/img/logo-v2.png"/>
        <img class="hero-image"src="assets/img/hero-image.jpg">
    </div>
{% endblock %}


{% block content %}
    {% for recipe in data %}
        <div class="recipe-container">
            <div>
                <img class="recipe-image" src="./assets/img/{{ recipe.recipe.file_name }}.jpg" alt="{{ recipe.recipe.file_name }}" >   
                <div class="recipe-info" >         
                    
                    <div class="title-rating-container">
                        <h2>{{ recipe.recipe.title }}</h2>
                        <span><i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> </span>
                    </div>
                    <p>{{ recipe.recipe.short_description }}</p>
                </div>
            </div>
            <div class="button-stats-container">       
                <button><a href="index.php?recipe_id={{recipe.recipe.id}}&action=detail">Get started!</a></button>
                <span>
                <span><i class="fa fa-user"></i> 4</span>
                <span><i class="fa fa-euro-sign"></i> {{recipe.total_price}}</span>
                <span><i class="fa fa-fire"></i> ?</span>
                </span>
            </div>
           
       </div>
    {% endfor %}
    

{% endblock %}
